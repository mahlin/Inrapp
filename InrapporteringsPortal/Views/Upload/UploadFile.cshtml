@model InrapporteringsPortal.Web.Models.ViewModels.UploadFileViewModel 
    
<script src="@Url.Content("~/Scripts/uploadFile.js")" type="text/javascript"></script>

 <script>
    var regInfoTexts = @Html.Raw(Json.Encode(Model.RegisterInfoText));
 </script>

@{
    ViewBag.Title = "Ladda upp fil";
}

<h2>@ViewBag.Title</h2>

<p>Välj till vilket register du vill ladda upp fil/filer</p>
<section>
    <div class="well bs-component">
        <br />
        <div class="row">
            <div class="col-xs-4 col-xs-push-0">
                <div class="form-group">
                    @Html.DropDownListFor(m => m.SelectedRegisterId, ViewBag.RegisterList as SelectList, " - Välj Register -",new {id= "ddlRegister", @class = "form-control" })
                </div>
            </div>
            <div class="col-xs-8 col-xs-push-0" id="registerInfo" class="registerInfo">
                @*Filnamn ska vara i formatet EBK_Länskod och Kommunkod_Inrapporteringsperiod_datum och klockslag.txt<br/>
                Ex. Ekb_1122_1710_1711141532.txt <br/>
                Antal filer som ska inrapporteras i en leverans: 2*@
            </div>
        </div>
    </div>
</section>  

@using (Html.BeginForm("UploadFile", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div>
        @*/* Test ett */*@
        @Html.TextBox("file", "", new {type = "file"}) <br/>
        <input type="submit" value="Upload"/>

        @ViewBag.Message
        


    </div>
}

  

