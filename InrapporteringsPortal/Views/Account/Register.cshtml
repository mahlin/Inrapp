@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <br /><br />
    <h4>Välkommen att registrera dig som användare på Socialstyrelsens inrapporteringsportal</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Namn, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Namn, new { @class = "form-control", id = "txtName" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { digits = true, maxlength = 4, @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { maxlength = 4, @class = "form-control" })
        </div>
    </div>
    @*<div class="form-group">
        @Html.Label("Välj register", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <select id="RegList" multiple="multiple">
                @for (var i = 0; i < Model.RegisterList.Count; i++)
                {
                <option value=@Model.RegisterList[i].Id>@Model.RegisterList[i].Namn</option>
                }
            </select>
        </div>
    </div>
    @Html.DropDownList("RegisterList", "Select a Value")
    <br/>
    @Html.ListBoxFor(m => m.SelectedRegisters, Model.RegisterChoices)*@


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Spara" />
        </div>
    </div>
}

