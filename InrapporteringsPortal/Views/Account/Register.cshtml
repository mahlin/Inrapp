        $('[id*=RegList]').multiselect({
            onChange: function (option, checked, select) {
                alert('Changed option ' + $(option).val() + ' , namn: '+ $(option).text());
                $.each(register, function(index, item) {
                    if (item.Id === parseInt($(option).val())) {
                        item.Selected = true;
                    }
                    alert('Id: ' + item.Id + ', namn: ' + item.Namn + ', vald: ' + item.Selected);
                });
                //alert('selected: ' + $('#RegList option:selected').val());
                //alert('selected2: ' + $(option)).map(function (a, item) { return item.value; });
