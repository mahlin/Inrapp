@model InrapporteringsPortal.Web.Models.IndexViewModel
@{
    ViewBag.Title = "Kontohantering";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Ändra dina kontouppgifter</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>PINkod:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Ändra PINkod", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Ange PINkod", "SetPassword")
            }
            ]
        </dd>
        <dt>Mobilnummer:</dt>
        <dd>
            @(Model.PhoneNumber ?? "None") [
            @if (Model.PhoneNumber != null)
    {
        @Html.ActionLink("Ändra", "AddPhoneNumber")
        @: &nbsp;|&nbsp;
        @Html.ActionLink("Ta bort", "RemovePhoneNumber", "Manage", null)
}
else
{
        @Html.ActionLink("Lägg till", "AddPhoneNumber")
}
            ]
        </dd>
        

