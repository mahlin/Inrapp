    $(function () {

        $form = $('#fileupload').fileupload({
            dataType: 'json'
        });

    });
    $('#fileupload').addClass('fileupload-processing');

</script>

<div class="padding-top-55">
    <h4>@ViewBag.Title</h4>
</div>

<p>Välj till vilket register du vill ladda upp fil/filer</p>
<section>
    <div class="well bs-component">
        <div class="row h-100">
            <div class="col-md-6 form-group">
                 @Html.DropDownListFor(m => m.SelectedRegisterId, ViewBag.RegisterList as SelectList, " - Välj Register -", new {id = "ddlRegister", @class = "form-control", style = "max-width:550px"})
            </div>
            <div class="col-md-6" style="padding-left: 0px;font-size: 0.9em"> 
                @if (Model.RegisterList.Count == 0)
                {
                    <div>Du har inte valt vilka uppgifter du ska rapportera, gå till  @Html.ActionLink("Min sida", "Index", "Manage") för att välja.</div>
                }
                else
                {
                    <div> Om du inte hittar rätt uppgifter i listan att rapportera för, gå till  @Html.ActionLink("Min sida", "Index", "Manage") för att välja.</div>
                }
            </div>
            <div class="row col-12" id="registerInfo" class="registerInfo" style="padding: 5px; margin-left:10px; font-size: 0.9em">
            </div>
        </div>
