<script>
    var $form = null;
    $(function () {

        $form = $('#fileupload').fileupload({
            dataType: 'json'
        });

    });
    $('#fileupload').addClass('fileupload-processing');

</script>


<h4>@ViewBag.Title</h4>

<p>Välj till vilket register du vill ladda upp fil/filer</p>
<section>
    <div class="well bs-component">
        <br />
        <div class="row h-100">
            <div class="col-xs-4 col-xs-push-0">
                <div class="form-group">
                    @Html.DropDownListFor(m => m.SelectedRegisterId, ViewBag.RegisterList as SelectList, " - Välj Register -", new { id = "ddlRegister", @class = "form-control" })
                </div>
            </div>
            <div class="col-xs-8 col-xs-push-0" id="registerInfo" class="registerInfo">
            </div>
        </div>
    </div>
</section>

@Html.Partial("_Files")

<!-- History/archive uploaded files -->
<H4>Historik</H4>
<table class="table table-striped">
    <thead>
        <tr class="historyHeader" style="background-color: #f9f9f9;">
            <th>Filnamn</th>
            <th>Uppladdad</th>
        </tr>
    </thead>
    <tbody>
    @if (Model.HistorikLista != null)
    {
        foreach (FilloggDetaljDTO loggRad in Model.HistorikLista)
        {
            <tr>
                <td>@loggRad.Filnamn</td>
                <td>@loggRad.Datum</td>
            </tr>
        }
    }
    </tbody>
</table>


@Scripts.Render("~/bundles/jQuery-File-Upload")